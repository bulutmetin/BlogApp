@model List<Article>

<div class="row">
    <div class="col-12">
        <h2>Article List</h2>
        <a href="/articles/create" class="btn btn-primary">New Article</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 125px;">Image</th>
                    <th>Title</th>
                    <th>IsActive</th>
                    <th style="width: 150px;">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/img/@item.Image" class="img-fluid" alt=""></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>

                        <td>
                            <a href="/articles/edit/@item.ArticleId" class="btn btn-warning">Edit</a>
                            <a href="/articles/delete/@item.ArticleId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>